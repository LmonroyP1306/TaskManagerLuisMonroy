@model TaskManager.Models.Tarea

<div class="modal-header bg-success text-white">
    <h5 class="modal-title"><i class="bi bi-plus-circle me-2"></i>Crear Nueva Tarea</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    @using (Html.BeginForm("Create", "Tareas", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        @Html.AntiForgeryToken()

        <div class="mb-4">
            @Html.LabelFor(m => m.Titulo, new { @class = "form-label" })
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-card-heading"></i></span>
                @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control", required = "required", placeholder = "Ingrese el título de la tarea" })
            </div>
            <div class="invalid-feedback">Por favor ingresa un título</div>
        </div>

        <div class="mb-4">
            @Html.LabelFor(m => m.Descripcion, new { @class = "form-label" })
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-text-paragraph"></i></span>
                @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = "3", placeholder = "Agregue una descripción detallada" })
            </div>
        </div>

        <div class="mb-4">
            @Html.LabelFor(m => m.FechaVencimiento, new { @class = "form-label" })
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-calendar-date"></i></span>
                @Html.TextBoxFor(m => m.FechaVencimiento, "{0:yyyy-MM-dd}", new
                {
                    @class = "form-control",
                    type = "date",
                    required = "required",
                    min = DateTime.Now.ToString("yyyy-MM-dd")
                })
            </div>
            <div class="invalid-feedback">La fecha debe ser válida</div>
        </div>

        <div class="mb-4">
            @Html.LabelFor(m => m.Estado, new { @class = "form-label" })
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-list-check"></i></span>
                @Html.DropDownListFor(m => m.Estado,
                TaskManager.Helpers.EnumHelper.ToSelectListWithDisplayNames<TaskManager.Models.EstadoTarea>(),
                "-- Seleccione --",
                new { @class = "form-select" })
            </div>
            @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger small" })
        </div>

        <div class="modal-footer bg-light">
            <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">
                <i class="bi bi-x-circle me-2"></i>Cancelar
            </button>
            <button type="submit" class="btn btn-success rounded-pill px-4">
                <i class="bi bi-check-circle me-2"></i>Guardar
            </button>
        </div>
    }
</div>